<!DOCTYPE html>
<html>
<head>
    <title>News</title>

    <%- include layout/head %>

</head>
<body>

<div class="container">
    <%- include layout/navigation.ejs %>
    <div class="row" style="margin-bottom: 10px;">
        <a href="/admin/news/new" class="btn btn-success pull-right"> Add News </a>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            News
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Author</th>
                        <th>Create Time</th>
                        <th>Update Time</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (data && data.news) { %>
                        <% for(var i = 0; i < data.news.length; i++) { %>
                            <tr>
                                <td> <%= data.news[i].id %> </td>
                                <td> <%= data.news[i].title %> </td>
                                <td> <%- data.news[i].content %> </td>
                                <td> <%= data.news[i].author %> </td>
                                <td> <%= data.news[i].created_at %> </td>
                                <td> <%= data.news[i].updated_at %> </td>
                                <td>
                                    <a href="/admin/news/edit/<%= data.news[i].id%>" class="btn btn-primary"> Edit </a>
                                    <button class="btn btn-danger news_delete" news_id = "<%= data.news[i].id%>"> Delete </button>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>
<script type="text/javascript" src = "/static/javascripts/post.js"></script>
</body>
</html>