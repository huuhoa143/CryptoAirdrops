<!DOCTYPE html>
<html>
<head>
    <title>Edit News</title>

    <%- include ../layout/head.ejs %>
    <script src='//cdn.tinymce.com/4/tinymce.min.js'></script>
    <script>
        tinymce.init({
            selector: 'textarea'
        });
    </script>
</head>
<body>
<div class="container">
    <%- include ../layout/navigation.ejs %>
    <div class="panel panel-default">
        <div class="panel-heading">
            Edit News
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <%if (data && data.error) {%>
                        <div id="post-alert" class="alert alert-danger col-sm-12">
                            <%= data.error%>
                        </div>

                    <%}%>

                    <form role="form" method="" action="">
                        <input class="id" type="hidden" name="id" value="<% if (data && data.news) {%><%= data.news.id%><%}%>">
                        <div class="form-group">
                            <label>Title</label>
                            <input class="form-control title" name="title" placeholder="Title" value="<% if (data && data.news) {%><%= data.news.title%><%}%>">
                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <textarea class="form-control" name="content" placeholder="Content"><% if (data && data.news) {%><%= data.news.content%><%}%></textarea>
                        </div>
                        <div class="form-group">
                            <label>Author</label>
                            <input class="form-control author" name="author" placeholder="Author" value="<% if (data && data.news) {%><%= data.news.author%><%}%>">
                        </div>
                        <input type="button" name="" value="Edit" class="btn btn-success news_edit">
                    </form>
                </div>
                <!-- /.col-lg-6 (nested) -->
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>
<script type="text/javascript" src = "/static/javascripts/post.js"></script>
</body>
</html>