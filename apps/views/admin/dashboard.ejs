<!DOCTYPE html>
<html>
<head>
    <title>Sign In</title>

    <%- include layout/head %>

</head>
<body>

<div class="container">
    <%- include layout/navigation.ejs %>
    <div class="row" style="margin-bottom: 10px;">
        <a href="/admin/post/new" class="btn btn-success pull-right"> Add new Post </a>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            Posts
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Website</th>
                        <th>Ico price</th>
                        <th>Ticker</th>
                        <th>Total Supply</th>
                        <th>Twitter</th>
                        <th>Facebook</th>
                        <th>Telegram</th>
                        <th>Bolt</th>
                        <th>Platform</th>
                        <th>Airdrop starts </th>
                        <th>Create Time</th>
                        <th>Update Time</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if (data && data.posts) { %>
                        <% for(var i = 0; i < data.posts.length; i++) { %>
                            <tr>
                                <td> <%= data.posts[i].id %> </td>
                                <td> <%= data.posts[i].title %> </td>
                                <td> <%= data.posts[i].content %> </td>
                                <td> <%= data.posts[i].website %> </td>
                                <td> <%= data.posts[i].icoprice %> </td>
                                <td> <%= data.posts[i].ticker %> </td>
                                <td> <%= data.posts[i].totalsupply %> </td>
                                <td> <%= data.posts[i].twitter %> </td>
                                <td> <%= data.posts[i].facebook %> </td>
                                <td> <%= data.posts[i].telegram %> </td>
                                <td> <%= data.posts[i].bolt %> </td>
                                <td> <%= data.posts[i].platform %> </td>
                                <td> <%= data.posts[i].start %> </td>
                                <td> <%= data.posts[i].created_at %> </td>
                                <td> <%= data.posts[i].updated_at %> </td>
                                <td>
                                    <a href="/admin/post/edit/<%= data.posts[i].id%>" class="btn btn-primary"> Edit </a>
                                    <button class="btn btn-danger post_delete" post_id = "<%= data.posts[i].id%>"> Delete </button>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>
<script type="text/javascript" src = "/static/javascripts/post.js"></script>
</body>
</html>